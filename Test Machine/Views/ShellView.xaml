<Window x:Class="Test_Machine.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="437" Width="624" Title="Test Machine" UseLayoutRounding="True" SnapsToDevicePixels="True">

	<Grid Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
        <Border BorderThickness="1" Background="Black" Margin="12,12,12,34">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="3" Background="CornflowerBlue">
                    <TextBlock Text="text output" FontFamily="MS Gothic" FontWeight="Normal" FontStyle="Normal" TextAlignment="Left" Foreground="White" FontSize="10" Width="180" Name="ScreenOutput" Height="140" />
                </Border>
            </Viewbox>
        </Border>
        
        <TextBlock Text="CPU State: " Margin="12,0,0,12" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="58" />
        <TextBlock Text="---" Margin="76,0,0,12" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="15" />
        <Button Content="Start CPU" Height="23" HorizontalAlignment="Right" Margin="0,0,12,9" VerticalAlignment="Bottom" Width="75" Name="StartCPU" />
        <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,0,93,9" VerticalAlignment="Bottom" Width="75" Name="LoadImage" />
    </Grid>

</Window>
